@{
    ViewData["Title"] = "CSVData upload page";
}

<h2>Upload CSV File</h2>

<form asp-action="Upload" asp-controller="CSVData" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="fileInput">Choose CSV file</label>
        <input type="file" name="csvFile" id="fileInput" accept=".csv" class="form-control" required />
    </div>

    <div class="form-group mt-3">
        <button type="submit" class="btn btn-primary">Submit</button>
        <button type="reset" class="btn btn-secondary">Cancel</button>
    </div>
</form>

